#input -> output data manipulation
inp_data= pd.read_csv('seo.csv',usecols=[0],verbose=False) #potentially useful: skipinitialspace, squeeze,verbose
inp_data=inp_data["Features"].tolist()
print(inp_data)

i_spec_data= [i.replace(' ','@') for i in inp_data]
print(i_spec_data)


inp_data = [i.split() for i in inp_data]
print(inp_data)


#scraping data for caps-locked acronyms. PASS
caps_list = []
for i in inp_data:
    for element in i:
        if element.isupper():
            caps_list.append(element)
print(list(set(caps_list)))

